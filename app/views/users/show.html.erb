<div class="row">
    <div class="well col-md-6 col-md-offset-3">
        <div class="col-md-2">
          <%= image_tag @user.profile.avatar.url, class: "profile-avatar" %>
        </div>
        <div class="col-md-10">
            <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
            <h3><span class="job_title_icon"><%= job_title_icon %></span><%= @user.profile.job_title %></h3>
            <div class="well profile_description">
                <h3 class="profile-block">Description</h3><%= @user.profile.description %></div><br/>
            <% if true#current_user.plan_id == 2%>
                <div class="well contact-info">
                    <h3 class="profile-block">Contact Info</h3>
                    <%= @user.profile.phone_number %><br/>
                    <%= @user.profile.contact_email %><br/>
                </div>
            <% end %>
        </div>
    </div>
</div>