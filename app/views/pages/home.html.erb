<div class="row">
    <% if user_signed_in? %>
        <div class="col-md-6">
            <div class="well">
                <% if current_user.profile %>
                    <h2 class = "text-center">Your Profile</h2>
                    <%= link_to "Edit user profile", edit_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
                    <%= link_to "View your profile", user_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
                <% else %>
                    <%= link_to "Create your profile", new_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block'%>
                <% end %>
            </div>
        </div>
         <div class="col-md-6">
            <div class="well">
            <h2 class = "text-center">The Community</h2>
            <%= link_to "Visit the community", users_path, class: 'btn btn-primary btn-lg btn-block' %>
            </div>
        </div>
    <% else %>
    <div class="col-md-6">
        <div class="well">
            <h2 class="text-center">Basic Membership</h2>
            <h4>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</h4>
            <br>
            <%= link_to "Sign up for free", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
    </div>
    <div class="col-md-6">
        <div class="well">
            <h2 class="text-center">Pro Membership</h2>
            <h4>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</h4>
            <%= link_to "Sign up for $10", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
    </div>
    <% end %>
</div>